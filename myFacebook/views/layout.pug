    style.
      .w3-theme-l5 {color:#000 !important; background-color:#eafaff !important}
      .w3-theme-l4 {color:#000 !important; background-color:#baf0ff !important}
      .w3-theme-l3 {color:#000 !important; background-color:#74e1ff !important}
      .w3-theme-l2 {color:#000 !important; background-color:#2fd2ff !important}
      .w3-theme-l1 {color:#fff !important; background-color:#00b6e9 !important}
      .w3-theme-d1 {color:#fff !important; background-color:#007393 !important}
      .w3-theme-d2 {color:#fff !important; background-color:#006683 !important}
      .w3-theme-d3 {color:#fff !important; background-color:#005972 !important}
      .w3-theme-d4 {color:#fff !important; background-color:#004d62 !important}
      .w3-theme-d5 {color:#fff !important; background-color:#004052 !important}

